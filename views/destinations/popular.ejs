<!-- Modal -->
<div class="modal" id="destinationModal">
  <div class="modal-content">
    <span class="modal-close">&times;</span>
    <div class="modal-body">
      <img class="modal-image" src="" alt="">
      <div class="modal-text">
        <h2 class="modal-title"></h2>
        <p class="modal-description"></p>
        <div class="modal-details"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // Destination details data
  const destinationDetails = {
    'Hundru Falls': {
      image: '/assets/hundru.png',
      description: 'Majestic cascades tumbling down rugged cliffs into crystal clear pools.',
      details: '<p><strong>Height:</strong> 98 meters</p><p><strong>Best Time to Visit:</strong> June to September (monsoon)</p><p><strong>Activities:</strong> Photography, trekking, and swimming in crystal clear pools.</p><p><strong>Getting There:</strong> 45 km from Ranchi, easily accessible by road.</p>'
    },
    'Netarhat': {
      image: '/assets/netarhat.png',
      description: 'The Queen of Chotanagpur Plateau with stunning sunsets and lush greenery.',
      details: '<p><strong>Altitude:</strong> 3,622 feet</p><p><strong>Best Time to Visit:</strong> October to May</p><p><strong>Activities:</strong> Trekking, sunset viewing, photography, and nature walks.</p><p><strong>Attractions:</strong> Panchmukhi falls, lodges with panoramic views, and local villages.</p>'
    },
    'Parasnath Hills': {
      image: '/assets/parasnath.png',
      description: 'A trek that blends spirituality with adventure through sacred mountain peaks.',
      details: '<p><strong>Height:</strong> 4,477 feet (highest point in Jharkhand)</p><p><strong>Best Time to Visit:</strong> October to May</p><p><strong>Activities:</strong> Trek to the summit, spiritual exploration, photography, and camping.</p><p><strong>Religious Significance:</strong> Sacred Jain pilgrimage site with 24 temples.</p>'
    },
    'Ranchi Museum': {
      image: '/assets/ranchi-museum.png',
      description: 'Artifacts, heritage, and the tribal history of Jharkhand preserved in time.',
      details: '<p><strong>Established:</strong> 1910</p><p><strong>Timings:</strong> 10 AM to 5 PM (Closed Mondays)</p><p><strong>Collections:</strong> Tribal artifacts, weapons, fossils, manuscripts, and modern art.</p><p><strong>Entry Fee:</strong> Affordable for both Indian and international visitors.</p>'
    },
    'Tribal Festivals': {
      image: '/assets/tribal.png',
      description: 'Colorful celebrations and local traditions showcasing Jharkhand\'s vibrant heritage.',
      details: '<p><strong>Major Festivals:</strong> Sarhul, Chhath, and Karma</p><p><strong>Best Time to Visit:</strong> During festival seasons</p><p><strong>Highlights:</strong> Traditional dances, music, food, and cultural performances.</p><p><strong>Experience:</strong> Immerse yourself in authentic tribal culture and traditions.</p>'
    },
    'Dalma Wildlife Sanctuary': {
      image: '/assets/dalma.png',
      description: 'Wild elephants and serene jungle trails through pristine natural landscapes.',
      details: '<p><strong>Area:</strong> 192 sq km</p><p><strong>Best Time to Visit:</strong> October to May</p><p><strong>Wildlife:</strong> Asian elephants, leopards, wild boar, and various bird species.</p><p><strong>Activities:</strong> Safari, trekking, bird watching, and nature photography.</p>'
    }
  };

  // Modal functionality
  const modal = document.getElementById('destinationModal');
  const closeBtn = document.querySelector('.modal-close');
  
  document.querySelectorAll('.destination-card-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const card = btn.closest('.destination-card');
      const title = card.querySelector('.destination-card-title').textContent;
      const details = destinationDetails[title];
      
      if (details) {
        document.querySelector('.modal-image').src = details.image;
        document.querySelector('.modal-title').textContent = title;
        document.querySelector('.modal-description').textContent = details.description;
        document.querySelector('.modal-details').innerHTML = details.details;
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }
    });
  });
  
  closeBtn.addEventListener('click', () => {
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  });
  
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Close modal with ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.style.display === 'flex') {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Intersection Observer for animations
  const popularObserver = new IntersectionObserver((entries)=>{
    entries.forEach(entry=>{
      if(entry.isIntersecting){
        entry.target.classList.add('show-popular');
        popularObserver.unobserve(entry.target);
      }
    })
  },{threshold:.2});

  document.querySelectorAll('.hidden-popular')
    .forEach(el => popularObserver.observe(el));

  // Filtering
  const buttons = document.querySelectorAll(".filter-btn");
  const cards = document.querySelectorAll(".destination-card");

  buttons.forEach(btn => {
    btn.addEventListener("click", () => {
      document.querySelector(".filter-btn.active").classList.remove("active");
      btn.classList.add("active");

      let filter = btn.dataset.filter;

      cards.forEach(card => {
        if(filter === "all" || card.classList.contains(filter)){
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    });
  });
</script>