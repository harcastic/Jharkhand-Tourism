<script>
  // Scroll animations
  const wildlifeObserver = new IntersectionObserver((entries)=>{
    entries.forEach(entry=>{
      if(entry.isIntersecting){
        entry.target.classList.add('show-wildlife');
        wildlifeObserver.unobserve(entry.target);
      }
    });
  },{threshold:.2});

  document.querySelectorAll('.fade-wildlife')
    .forEach(el => wildlifeObserver.observe(el));
</script>
