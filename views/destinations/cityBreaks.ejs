<!-- Modal -->
<div class="modal" id="cityModal">
  <div class="modal-content">
    <span class="modal-close">&times;</span>
    <div class="modal-body">
      <img class="modal-image" src="" alt="">
      <div class="modal-text">
        <h2 class="modal-title"></h2>
        <p class="modal-description"></p>
        <div class="modal-details"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // City details data
  const cityDetails = {
    'Ranchi': {
      image: '/assets/ranchi.png',
      description: 'The capital city of Jharkhand, known for its colonial architecture, vibrant culture, and spiritual significance.',
      details: '<p><strong>Best Time to Visit:</strong> October to March</p><p><strong>Things to Do:</strong> Visit the Ramakrishna Mission, explore the Ranchi Museum, enjoy the serene lakes, and visit ancient temples.</p><p><strong>Local Cuisine:</strong> Don\'t miss the traditional Jharkhand thali and local street food.</p>'
    },
    'Jamshedpur': {
      image: '/assets/jamshedpur.png',
      description: 'India\'s first planned city, famous for steel industry, shopping complexes, and modern infrastructure.',
      details: '<p><strong>Best Time to Visit:</strong> November to February</p><p><strong>Things to Do:</strong> Tour Tata Steel facilities, shop at modern malls, enjoy parks, and explore industrial heritage.</p><p><strong>Local Cuisine:</strong> Bengali and local Jharkhand dishes are popular here.</p>'
    },
    'Dhanbad': {
      image: '/assets/dhanbad.png',
      description: 'The coal capital of India with bustling markets, underground mines, and vibrant nightlife.',
      details: '<p><strong>Best Time to Visit:</strong> October to March</p><p><strong>Things to Do:</strong> Explore coal mines, visit bustling bazaars, experience night markets, and try local food.</p><p><strong>Local Cuisine:</strong> Street food and coal region delicacies are must-tries.</p>'
    },
    'Giridih': {
      image: '/assets/giridih.png',
      description: 'A hidden gem offering authentic local cuisine, traditional crafts, and warm hospitality.',
      details: '<p><strong>Best Time to Visit:</strong> November to February</p><p><strong>Things to Do:</strong> Taste authentic local cuisine, browse handicrafts, explore local markets, and experience tribal art.</p><p><strong>Local Cuisine:</strong> Tribal specialties and local delicacies are the highlights.</p>'
    },
    'Hazaribagh': {
      image: '/assets/hazaribagh.png',
      description: 'Historic city with colonial charm, museums, and proximity to the famous wildlife sanctuary.',
      details: '<p><strong>Best Time to Visit:</strong> October to March</p><p><strong>Things to Do:</strong> Visit the national park, explore museums, enjoy scenic lakes, and learn about local history.</p><p><strong>Local Cuisine:</strong> Traditional Jharkhand cuisine with a colonial twist.</p>'
    },
    'Bokaro': {
      image: '/assets/bokaro.png',
      description: 'Modern industrial city with excellent shopping districts, parks, and urban amenities.',
      details: '<p><strong>Best Time to Visit:</strong> November to February</p><p><strong>Things to Do:</strong> Shop at modern malls, relax in parks, explore steel city heritage, and dine at restaurants.</p><p><strong>Local Cuisine:</strong> Mix of modern and traditional cuisines available.</p>'
    },
    'Deoghar': {
      image: '/assets/deoghar.png',
      description: 'Sacred pilgrimage town with ancient temples, spiritual vibes, and riverside walks.',
      details: '<p><strong>Best Time to Visit:</strong> October to March</p><p><strong>Things to Do:</strong> Visit the sacred Naulakha Mandir, explore ancient temples, walk along ghats, and join spiritual tours.</p><p><strong>Local Cuisine:</strong> Vegetarian and traditional Jharkhand food.</p>'
    },
    'Medininagar': {
      image: '/assets/medininagar.png',
      description: 'Charming city known for its food scene, street markets, and local delicacies.',
      details: '<p><strong>Best Time to Visit:</strong> October to March</p><p><strong>Things to Do:</strong> Enjoy local food, explore street markets, dine at restaurants, and join food tours.</p><p><strong>Local Cuisine:</strong> Street food paradise with diverse local delicacies.</p>'
    }
  };

  // Modal functionality
  const modal = document.getElementById('cityModal');
  const closeBtn = document.querySelector('.modal-close');
  
  document.querySelectorAll('.city-card-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const card = btn.closest('.city-card');
      const title = card.querySelector('.city-card-title').textContent;
      const details = cityDetails[title];
      
      if (details) {
        document.querySelector('.modal-image').src = details.image;
        document.querySelector('.modal-title').textContent = title;
        document.querySelector('.modal-description').textContent = details.description;
        document.querySelector('.modal-details').innerHTML = details.details;
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }
    });
  });
  
  closeBtn.addEventListener('click', () => {
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  });
  
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Close modal with ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.style.display === 'flex') {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Filter functionality
  document.querySelectorAll('.filter-btn-city').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelector('.filter-btn-city.active').classList.remove('active');
      btn.classList.add('active');

      const filter = btn.dataset.filter;
      const cards = document.querySelectorAll('.city-card');

      cards.forEach(card => {
        if (filter === 'all' || card.classList.contains(filter)) {
          card.style.display = 'block';
          setTimeout(() => card.classList.add('show-city'), 10);
        } else {
          card.classList.remove('show-city');
          setTimeout(() => card.style.display = 'none', 400);
        }
      });
    });
  });

  // Animate cards on page load
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.hidden-city').forEach((card, idx) => {
      setTimeout(() => {
        card.classList.add('show-city');
      }, idx * 100);
    });
  });
</script>
